{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [],
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
